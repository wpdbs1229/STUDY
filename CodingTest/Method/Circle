
public class Circle {

	public double circleArea(double radius) {
		
		return Math.PI*radius*radius; //원의 넓이를 계산
	}
	public double circumFerence(double radius) {
		
		return 2*Math.PI*radius;// 원의 둘레를 계산
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Circle cir = new Circle();
		
		System.out.println(cir.circleArea(3.0));
		System.out.println(cir.circumFerence(3.0));
	}

}
