
public class Circle {
	
	//원의 반지름, 원의 중심좌표
	int rad;
	Point center;
	
	//생성자 생성시 반지름, 원의 중심좌표 초기화
	public Circle(int x, int y , int r) {
		
		center = new Point(x,y);
		rad = r;
	}
	
	//원의 중시좌표 및 반지름 출력
	public void showCircleInfo() {
		System.out.println("radius : "+rad);
		center.showPointInfo();
	}
}
