
public class ReverseString {

	public static void main(String[] args) {
		
		/* 클래스에 대한 정보와 클래스에 관련된 메소드 
		 * 등을 찾기위해서 docs.oracle.com을 통해 
		 * java의 APIs document
		 * 를 찾아볼것*/
		String str1 = "ABCDEFGIJKLMN";
		StringBuilder string1 = new StringBuilder(str1);
		
		string1.reverse();//시퀀스를 역순으로 바꿔주는 메소드
		System.out.println(string1); 
		
		String str2 = "990208-1012752";
		StringBuilder string2 = new StringBuilder(str2);
		
		string2.deleteCharAt(6); //해당 인덱스의 시퀀스를 삭제하는 메소드
		
		System.out.println(string2);

	}

}
