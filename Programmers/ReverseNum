class Solution {
    public int[] solution(long n) {
        	String str = String.valueOf(n);
		
		StringBuilder sb = new StringBuilder(str); 
		
		sb.reverse();
		
		int[] arr = new int[sb.length()];
		
		for(int i =0; i<sb.length(); i++) {
			arr[i] = Integer.parseInt(Character.toString(sb.charAt(i))) ;
			
		}
		
		return arr;
    }
}
